.team-card
	position relative
	display inline-block
	width 20%
	vertical-align top
	transition opacity .5s

	&:hover
		.team-card__info
			opacity .82
			transition opacity .5s

	+below(md)
		width auto


	&__avatar
		overflow hidden

		img
			width 100%

	&__info
		position absolute
		top 9px
		right 9px
		left 9px
		bottom 9px
		padding-bottom rem(39px)
		padding-left rem(19px)
		line-height 1.3
		text-align left
		background-color #f6f6f6
		opacity 0
		display flex
		flex-direction column
		justify-content flex-end

	&__name
		// display inline-block
		// vertical-align bottom
		font-family font-second

		// &:before
		// 	content ''
		// 	display inline-block
		// 	vertical-align bottom
		// 	height 100%

	&__proffesion
		margin-bottom 9px
		font-style italic

	.social
		position relative
		padding-top 19px

		&:before
			position absolute
			top 0
			left 0
			width 57%
			content ''
			border-bottom 2px solid
