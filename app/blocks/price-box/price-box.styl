.price-box
	background-color #fff
	text-align center
	padding-top rem(46px)
	padding-bottom rem(58px)
	transition all .5s

	&:hover
		box-shadow 0 0 50px 0 rgba(0, 0, 0, .75)
		transition all .5s

	&__name
	&__price
		font-family font-second

	&__name
		margin-bottom rem(26px)

	&__decor
		// position absolute
		display block
		width 70%
		position relative
		center()

		&:before
			content ''
			position absolute
			border 1px solid
			width 100%
			left 0
			bottom rem(-25px)

	&__icon-wrap
		size(rem(50px))
		border-radius 50%
		border 2px solid
		vertical-align middle
		center()
		margin-bottom rem(40px)
		position relative
		background-color #fff

		&:before
			content ''
			display inline-block
			vertical-align middle
			height 100%

	&__icon
		width rem(20px)
		height rem(20px)
		vertical-align middle
		display inline-block

		&_lock
			margin-left 5px

	&__price
		font-size rem(70px)
		font-weight 700
		position relative
		margin-bottom rem(52px)

		&_val
			top 0
			left 29%
			position absolute
			font-size rem(28px)
			font-weight 400

	&__list
		font-size rem(16px)
		font-style italic
		line-height 1.9
		margin-bottom rem(51px)
