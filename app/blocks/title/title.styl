.title
	position relative
	padding-y(27px)
	display inline-block
	min-width title-min-width
	font-size rem(20px)
	text-transform uppercase
	color color-main
	
	&:before
		position absolute
		left 0
		bottom 0
		width 100%
		min-width title-min-width
		height 5px
		content ''
		title-bg-grey()
	
	&_white-color
		color #fff
		
		&:before
			title-bg-white()
			
	&_header
		padding-x(rem(18px))
		padding-y(rem(37px))
		font-size rem(36px)
		color #fff
		
		&:before
			width 100%
			margin-left 0
			left 0
		&:after
			top 0
			title-bg-white()
			@extends .title:before
		
