.index-post
	// max-height 412px
	background-color #2d2d2f
	
	.index-post-pd-zero
		padding-x(0)
	
	&__image-wrap
		overflow hidden
		text-align center
		
	&__image
		width 100%
		height auto
		display inline-block
		vertical-align top

	&__content
		padding rem(49px) rem(15px) rem(20px)
		overflow hidden
		
	&__info
		font-size rem(12px)
		font-style italic
		position relative
		color #e3e3e3
		margin-bottom rem(31px)
		
		&:before
			content ''
			width rem(151px)
			height 1px
			background-color #454545
			position absolute
			left 0
			bottom rem(-11px)
	
	h4
		position relative
		color #e3e3e3
		font-size rem(13px)
		text-transform uppercase
		margin-bottom rem(37px)
		padding-left rem(12px)
		
		&:before
			content ''
			width 0
			height 0
			border-style solid
			border-width .269em 0 .269em .308em
			border-color transparent transparent transparent #e3e3e3
			left 0
			position absolute
			top 50%
			margin-top -.16em
		
	p
		color #949494
		font-size 14px
		line-height 1.4
		margin-right rem(11px)